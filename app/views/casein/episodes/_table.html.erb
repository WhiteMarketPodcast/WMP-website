      <td><%= casein_table_cell_link episode.episode_number, casein_episode_path(episode) %></td>
      <td><%= casein_table_cell_link episode.title, casein_episode_path(episode) %></td>
      <td><%= casein_table_cell_link episode.description, casein_episode_path(episode) %></td>
      <td><%= casein_table_cell_link episode.url, casein_episode_path(episode) %></td>
      <td class="delete">
        <%= link_to(casein_show_row_icon("trash"), casein_episode_path(episode), method: :delete, data: { confirm: "Are you sure you want to delete this episode?" }) %>
